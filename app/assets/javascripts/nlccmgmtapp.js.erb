/* global angular */
var nlccmgmtapp = angular.module('nlccmgmtapp',['ui.router', 'templates', 'nlcc.tools', 
'nlcc.factory', 'ui.bootstrap', 'frapontillo.bootstrap-switch', 'ion.rangeslider', 'summernote', 'angularFileUpload', 'froala']);

nlccmgmtapp.value('froalaConfig', {
	toolbarInline: false,
	placeholderText: 'Enter Text Here'
});
	
nlccmgmtapp.filter('range', function() {
  return function(input, total, initial) {
    initial = initial || 0
    total = parseInt(total);

    for (var i=0; i<total; i++) {
      input.push(i+initial);
    }

    return input;
  };
});