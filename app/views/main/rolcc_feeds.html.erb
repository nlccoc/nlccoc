<script type="text/javascript" src="//s7.addthis.com/js/300/addthis_widget.js#pubid=ra-59276c095bc3805e"></script>
<style>
span.addthis_inline_share_toolbox_ej7z {
    float: right;
}
.at-style-responsive .at-share-btn {
  padding: 3px;
  width: 22px;
  height: 22px;
}
</style>
<section id="content">

	<div class="content-wrap">

		<div class="container clearfix">
		  <div class="row">
        <div class="col-sm-12">
          <h4 class="uppercase mb64 large" style='padding-left: 100px;'>矽谷生命河每日靈修小品</h4>
        </div>
      </div>

			<!-- Post Content
			============================================= -->
			<div class="postcontent nobottommargin clearfix">

				<!-- Posts
				============================================= -->
				<div id="posts" class="post-timeline clearfix">

					<div class="timeline-border"></div>
					<%= render @posts %>
          <% @posts.each do |post| %>
  
          <% end %>
			</div><!-- #posts end -->
				<div class='row pagination-button'>
        	<div id="with-button">
        		<%= will_paginate(@posts) %>
        	</div>
        	<% if @posts.next_page %>
          	<%= link_to '#', id: "load_more_posts", class: "image-bg btn btn-filled mb16 mt16" do %> <%= t('loadmore') %> <% end %>
          <% end %>
        </div>

			</div><!-- .postcontent end -->

			<!-- Sidebar
			============================================= -->
			<div class="sidebar nobottommargin col_last clearfix rolcc_feed_sidebar">
				<div class="widget">
          <h6 class="title">Search By ...</h6>
          <hr>
          <form style='margin-bottom: 12px;' >
              <input class="mb0" type="text" placeholder="Type Here" id='search'/>
          </form>
          
          <div class="select-option" style='margin-bottom: 12px;'>
            <i class="ti-angle-down"></i>
            <%= select("achives", "date_month", @category_dates.all.collect {|p| [ "#{t('date.month_names')[p.month]}, #{p.year}", "#{p.year}/#{p.month}" ] }, {include_blank: 'Achives'}, :onchange => "window.location.replace('/rolcc_feeds/'+this.value);") %>
            
            <select>
                <option selected value="Default">Archives</option>
                <option value="Small">February, 2017</option>
                <option value="Medium">January, 2017</option>
                <option value="Larger">December, 2016</option>
            </select>
          </div>
          <div class="select-option" style='margin-bottom: 12px;'>
            <i class="ti-angle-down"></i>
            <%= select("achives", "book", @category_books.all.collect {|p| [ p.name, p.name, p.name ] }, {include_blank: 'Books'}, :onchange => "window.location.replace('/rolcc_feeds/book/'+this.value);") %>
          </div>
        </div>
			</div><!-- .sidebar end -->

		</div>

	</div>

</section><!-- #content end -->

<script>
document.getElementById("search")
  .addEventListener("keyup", function(event) {
  event.preventDefault();
  if (event.keyCode === 13) {
    if (this.value === '') 
      return;

    window.location.replace('/rolcc_feeds?search_string=' + this.value);
  }
});
</script>
