<style>
.prayer {
  font-style: italic;
}
</style>
<section>
  <div class="container rolcc">
    <div class="row">
      <div class="col-sm-12 text-center">
        <ul class="post-meta">
          <li>
            <%= link_to rolcc_feeds_path do %>
              <i class='ti-layout-list-thumb'></i>
            <% end %>
          </li>
          <li>
            <span class="label"><%= @rolcc_feed.date.strftime("%d") %> <%= @rolcc_feed.date.strftime("%b") %></span>
          </li>
          <li>
            <i class="ti-user"></i>
            <span><!--Written by-->
              <a href="<%= @rolcc_feed.link %>" target='_blank'>ROLCC 矽谷生命河靈糧堂</a> 撰寫
            </span>
          </li>
          <!--<li>
            <i class="ti-tag"></i>
            <span>Tagged as
              <a href="#">Lifestyle</a>
            </span>
          </li>-->
        </ul>
        <hr>
       <!-- <h3 class="uppercase mb16">每日靈修 <%= @rolcc_feed.date %></h3>-->
        <p class="lead mb64">
            <%= @rolcc_feed.book %>
        </p>
      </div>
    </div>

    <div class='row'>
      <div class="col-sm-8 col-sm-offset-2">
        <div class="post-snippet mb64">
          <p>
            <%= @rolcc_feed.long_script.html_safe %>
          </p>
          <% unless @rolcc_feed.prayer.nil? %>
          <hr class='mb64'>
          <p class='lead'>
            與劉彤牧師同心禱告
          </p>
          <p class='mb64'>
            <span class='prayer'><i class="fa fa-quote-left sup"></i> <%= @rolcc_feed.prayer %> <i class="fa fa-quote-right sub"></i></span>
          </p>
          <% end %>
          <!-- Go to www.addthis.com/dashboard to customize your tools --> 
          <div class="addthis_inline_share_toolbox" data-title="<%= '今日靈修: ' + @rolcc_feed.book %>" data-description="<%= @rolcc_feed.share.html_safe %>"></div>
        </div>
      </div>
    </div>
  </div>
</section>

