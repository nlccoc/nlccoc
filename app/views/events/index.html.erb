<p id="notice"><%= notice %></p>

<h1>Listing Events</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Desc</th>
      <th>Start time</th>
      <th>Interval min</th>
      <th>Date</th>
      <th>Interval day</th>
      <th>More link</th>
      <th>Event Type</th>
      <th>Event Status</th>
      <th>Event Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.title %></td>
        <td><%= event.desc %></td>
        <td><%= event.start_time %></td>
        <td><%= event.interval_min %></td>
        <td><%= event.date %></td>
        <td><%= event.interval_day %></td>
        <td><%= event.more_link %></td>
        <td><%= event.event_type.name %></td>
        <td><%= event.event_status.name unless event.event_status.nil? %></td>
        <td><%= event.event_category.name unless event.event_category.nil? %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

